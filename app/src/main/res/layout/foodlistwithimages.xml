<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tableBg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/listarea"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tableText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:text="Kokt egg"
            android:textColor="@color/colorPrimary"
            android:textSize="36sp"
            app:layout_constraintStart_toEndOf="@+id/tableImage"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/tableImage"
            android:layout_width="300dp"
            android:layout_height="140dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tableBg"
            app:layout_constraintTop_toTopOf="@+id/tableBg"
            app:srcCompat="@drawable/egg" />

        <Button
            android:id="@+id/plusButton"
            android:layout_width="40dp"
            android:layout_height="52dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="+"
            android:textSize="24sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/minusButton"
            android:layout_width="40dp"
            android:layout_height="52dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:text="-"
            android:textSize="24sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plusButton" />

        <TextView
            android:id="@+id/numberOfportions"
            android:layout_width="200dp"
            android:layout_height="28dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:text="0 porsjoner"
            app:layout_constraintStart_toEndOf="@+id/tableImage"
            app:layout_constraintTop_toBottomOf="@+id/tableText" />

        <Button
            android:id="@+id/mealAmountButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:drawableLeft="@android:drawable/ic_menu_edit"
            android:text="SpesifisÃ©r"
            app:layout_constraintBottom_toBottomOf="@+id/tableBg"
            app:layout_constraintEnd_toStartOf="@+id/plusButton"
            app:layout_constraintTop_toTopOf="@+id/tableBg" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>